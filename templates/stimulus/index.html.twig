{% extends 'base.html.twig' %}

{% block title %}Hello StimulusController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6 d-flex justify-content-center align-items-center min-height">
                <h3 data-controller="hello" class="text-uppercase"></h3>
            </div>
            <div class="col-6 d-flex justify-content-center align-items-center min-height">
                <div {{ stimulus_controller(
                    'react-component',
                    {
                        name: 'Lightly used toothbrush'
                    }
                ) }}></div>
            </div>
        </div>
    </div>
{% endblock %}
